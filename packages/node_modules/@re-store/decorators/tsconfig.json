{
    "extends": "../../../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "esnext",
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**",
        "dist",
        "src/**/*.d.ts"
    ]
}