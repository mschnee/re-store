    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run AVA test serially",
            "program": "${workspaceRoot}/node_modules/ava/profile.js",
            "args": [
                "${file}",
                "--serial"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "env": {
                "TS_NODE_IGNORE": "/(?<!packages/)node_modules/",
            },
            "cwd":"${workspaceFolder}/packages/node_modules/@re-store/store"
        }
    ]
}
